@model AspNetTemplate.ApplicationService.ServiceResult

<div class="col-12 @(Model != null && Model?.Messages?.Count == 0 ? "hide" : "")">
    @if (Model != null)
    {
        @foreach (var message in Model.Messages)
        {
            <div class="alert alert-@Model.Mode">
                @message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    }

</div>