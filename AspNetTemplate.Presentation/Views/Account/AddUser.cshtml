@inject AspNetTemplate.CommonService.ILocalizationService Localizer
@model AspNetTemplate.ApplicationService.ServiceResult
<div class="row justify-content-md-center">
    @await Html.PartialAsync("_PartialMessage", Model)

    <div class="col-md-6 col-sm-12">
        <form action="/account/adduser" method="post">
            <div class="form-group">
                <label>@Localizer.Localize("First Name")</label>
                <input type="text" name="firstname" class="form-control" required/>
            </div>

            <div class="form-group">
                <label>@Localizer.Localize("Last Name")</label>
                <input type="text" name="lastname" class="form-control" required />
            </div>

            <div class="form-group">
                <label>@Localizer.Localize("Email")</label>
                <input type="text" name="email" class="form-control" required/>
            </div>

            <div class="form-group">
                <label>@Localizer.Localize("Password")</label>
                <input type="password" name="password" class="form-control" required/>
            </div>

            <div class="form-group">
                <label>@Localizer.Localize("Role")</label>
                <select required name="role" class="form-control">
                    <option value="3">@Localizer.Localize("Finance")</option>
                    <option value="1">@Localizer.Localize("Employee")</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
