@inject AspNetTemplate.CommonService.ILocalizationService Localizer
@model AspNetTemplate.ApplicationService.ServiceResult
<div class="row justify-content-md-center">

    <div class="col-12 @(Model != null && Model?.Messages?.Count == 0 ? "hide" : "")">
        @if (Model != null)
        {
            @foreach (var message in Model.Messages)
            {
                <div class="alert alert-@Model.Mode">
                    @message
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        }

    </div>
    <div class="col-md-6 col-sm-12">
        <form method="post" action="/account/addexpense" enctype="multipart/form-data">
            <div class="form-group">
                <label class="">@Localizer.Localize("Choose your expense")</label>
                <input id="expense-photo" name="ExpensePhoto" class="form-control-file" type="file" />
            </div>
            <div class="form-group">
                <label>@Localizer.Localize("Description")</label>
                <textarea id="description" class="form-control" name="description"></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="@Localizer.Localize("Upload")">
            </div>
        </form>

    </div>
</div>
