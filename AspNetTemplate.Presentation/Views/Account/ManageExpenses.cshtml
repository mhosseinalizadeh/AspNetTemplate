@section Styles{

    <link rel="stylesheet" href="~/lib/DataTables/datatables.min.css" />
    <link rel="stylesheet" href="~/lib/DataTables/DataTables-1.10.18/css/dataTables.bootstrap4.min.css" />
}
@section Scripts {
    <script src="~/lib/DataTables/datatables.min.js"></script>
    <script src="~/lib/DataTables/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/DataTables/DataTables-1.10.18/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/pages/ManageExpenses/manageexpenses.js"></script>
}

<table id="expenses" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Description</th>
            <th>Upload Date</th>
            <th>State</th>
            <th>State Description</th>
            <th>View File</th>
            <th>Manage</th>
        </tr>
    </thead>
</table>


<div class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Decline Expense</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <textarea class="decline-description form-control" name="statedescription" placeholder="Please enter your reason."></textarea>
                    <small id="declineHelp" class="form-text text-muted font-italic">Optional</small>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-decline-submit btn-danger">Decline</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
